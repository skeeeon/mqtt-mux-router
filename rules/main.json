{
    "topic": "sensors/+/temperature",
    "sourceBroker": "source1",
    "description": "Temperature alerts",
    "enabled": true,
    "conditions": {
        "operator": "and",
        "items": [
            {
                "field": "temperature",
                "operator": "gt",
                "value": 30
            }
        ]
    },
    "action": {
        "topic": "alerts/${device_id}/temperature",
        "targetBroker": "target1",
        "payload": "{\"alert\":\"High temperature!\",\"value\":${temperature}}",
        "qos": 1,
        "retain": false
    }
}
