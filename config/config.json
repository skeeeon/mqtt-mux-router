{
    "brokers": {
        "source1": {
            "id": "source1",
            "role": "source",
            "address": "ssl://source.mqtt.example.com:8883",
            "clientId": "mux-source1",
            "username": "user",
            "password": "pass",
            "tls": {
                "enable": true,
                "certFile": "certs/client-cert.pem",
                "keyFile": "certs/client-key.pem",
                "caFile": "certs/ca.pem"
            }
        },
        "target1": {
            "id": "target1",
            "role": "target",
            "address": "mqtt://target.mqtt.example.com:1883",
            "clientId": "mux-target1"
        }
    },
    "logging": {
        "level": "info",
        "outputPath": "stdout",
        "encoding": "json"
    },
    "metrics": {
        "enabled": true,
        "address": ":2112",
        "path": "/metrics",
        "updateInterval": "15s"
    },
    "processing": {
        "workers": 4,
        "queueSize": 1000,
        "batchSize": 100
    }
}
